<h1>Tasks list</h1>
<ul><% @tasks.each do |task|  %>
  <li><%= task.name %>
    <%= link_to 'details', task_path(task) %>
    <%= link_to 'edit', edit_task_path(task) %>
    <%= link_to 'delete', task_path(task), method: :delete %></li>
<% end %>
</ul>
<%= link_to 'add task', new_task_path %> <br />
<%= flash[:notice] %>